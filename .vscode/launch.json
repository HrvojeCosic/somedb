{
	"version": "2.0.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/test/bin/index_test", // change file to debug here
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"windows": {
				"program": "${workspaceRoot}"
			},

			"preLaunchTask": "build",
			"postDebugTask": "cleanup"
		}
	]
}